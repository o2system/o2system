{
    "name": "o2system/o2system",
    "description": "O2System PHP Framework.",
    "keywords": ["framework", "o2system"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.4",
        "o2system/framework": "*"
    },
    "require-dev": {
        "o2system/gear": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('cache') || mkdir('cache');\""
        ],
        "post-install-cmd": [
            "chmod 755 storage/",
            "chmod 777 cache"
        ]
    }
}
